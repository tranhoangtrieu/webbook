@model IEnumerable<Category>

<div class="col-lg-12">
    <div class="mb-3">
        <h4>Categories</h4>
        <ul class="list-unstyled">
            @foreach (var item in Model)
            {
                <li>
                    <div class="d-flex justify-content-between">
                        <a asp-controller="Product" asp-action="Index">
                            @item.Name
                        </a>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>