@model IEnumerable<WebsiteBook.Models.Product>

@{
    ViewData["Title"] = "Home Page";
    int numOfQuantity = 1;
    int count = 0;
}

<html>
<body>
    <main>
        <!-- Banner layout 1 Start-->
        <div class="position-relative overflow-hidden text-center" style="background-image: url('https://img.freepik.com/free-vector/flat-world-book-day-horizontal-sale-banner_23-2149298875.jpg?size=626&ext=jpg'); background-size: cover; background-position: center; height:400px">
            <div class="mark" style="background-color: rgba(200, 200, 200, 0.3); width:max-content, height:max-content">
                <div class="col-md-5 p-lg-5 mx-auto my-5 text-white">
                    <h1 class="display-4 fw-normal">Punny headline</h1>
                    <p class="lead fw-normal">And an even wittier subheading to boot. Jumpstart your marketing efforts with this example based on Apple’s marketing pages.</p>
                    <a class="btn btn-outline-dark fw-bold" asp-controller="Product" asp-action="Index" >Buy Now</a>
                </div>
            </div>
        </div>
        <!-- Banner layout End-->

        <!-- Products Start-->
        <div class=" row row-cols-1 row-cols-md-3 align-content-between justify-content-between pb-5">
            <div class="d-flex flex-column justify-content-center align-items-center text-center gap-4 pt-5">
                <h3 class="">Novel</h3>
                <img src="https://th.bing.com/th/id/OIP.DQEylgeu82h_cxH_Vp8ibgHaL0?w=197&h=315&c=7&r=0&o=5&dpr=1.3&pid=1.7" style="max-width:300px;min-width:200px;min-height: 200px;max-height: 400px;" alt="Top" />
                <a class="btn btn-outline-dark fw-bold" asp-controller="Product" asp-action="Index" asp-route-categoryName="">Xem them</a>
            </div>
            <div class="d-flex flex-column justify-content-center align-items-center text-center gap-2 pt-5">
                <h3 class="">Comic</h3>
                <img src="https://th.bing.com/th/id/OIP.Yty4c_imbMRzeSF-wdl6yQHaLG?w=208&h=305&c=7&r=0&o=5&dpr=1.3&pid=1.7" style="max-width:300px;min-width:200px;min-height: 200px;max-height: 400px;" alt="Bottom" />
                <a class="btn btn-outline-dark fw-bold" asp-controller="Product" asp-action="Index" asp-route-categoryName="">Xem them</a>
            </div>
            <div class="d-flex flex-column justify-content-center align-items-center text-center gap-2 pt-5">
                <h3 class="">Fables</h3>
                <img src="https://th.bing.com/th/id/OIP.UhnRI_RvpPc2OdyE2Ex90QHaI8?w=171&h=206&c=7&r=0&o=5&dpr=1.3&pid=1.7" style="max-width:300px;min-width:200px;min-height: 200px;max-height: 400px;" alt="Bag" />
                <a class="btn btn-outline-dark fw-bold" asp-controller="Product" asp-action="Index" asp-route-categoryName="">Xem them</a>
            </div>
        </div>
        <!-- Products End-->
        <!-- Banner layout 2 Start-->
        <div class="position-relative overflow-hidden text-center" style="background-image: url('https://img.freepik.com/free-vector/horizontal-sale-banner-template-world-book-day-celebration_23-2150226036.jpg?size=626&ext=jpg'); background-size: cover; background-position: center; height:400px">
            <div class="col-md-5 p-lg-5 mx-auto my-5 text-white">
                <h1 class="display-4 fw-normal">Save in Style</h1>
                <p class="lead fw-normal">With the discount clothing!</p>
                <a class="btn btn-outline-light fw-bold" asp-area="" asp-action="" asp-controller="">Xem them</a>
            </div>
        </div>
        <!-- Banner layout 2 End-->
        <!-- Group Products Start-->
        <div class="p-2">
            <div class="pt-5">
                <h1>Reference</h1>
                <section class="py-2">
                    <div class="container px-1 mt-5">

                        <div class="row gx-4 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">

                            @foreach (var item in Model)
                            {
                               
                                    @if (item.IsDetactive == false)
                                    {
                                        <div class="col mb-5">
                                            <div class="card gap-3" style="width: 16rem;">
                                                <a class="text-decoration-none text-black" asp-controller="Product" asp-action="Display" asp-route-productId="@item.Id">
                                                    <img src="@item.ImageUrl" class="card-img-top" alt="..." style="height: 280px;">
                                                </a>

                                                <div class="card-body">
                                                    <a class="text-decoration-none text-black" asp-controller="Product" asp-action="Display" asp-route-productId="@item.Id">
                                                        <h5 class="card-title">
                                                            @Html.DisplayFor(modelItem => item.Name)
                                                        </h5>
                                                    <div class="d-flex">
                                                        <span>Thể loại:</span> <p class="mx-3">@item.Category.Name</p>
                                                    </div>
                                                        <div class="d-flex">
                                                            <span>Tác giả:</span> <p class="mx-3">@item.TacGia.Name</p>
                                                        </div>
                                                        <div class="d-flex">
                                                            <span>Price: </span>
                                                            <p class="mx-3">@item.Price.ToString("#,##0") Vnđ</p>
                                                        </div>
                                                    </a>
                                                    <a asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-productId="@item.Id" asp-route-quantity="@numOfQuantity">
                                                        <button class="btn btn-outline-dark">

                                                            <i class="bi-cart-fill me-1"></i> Add to Cart
                                                        </button>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                   
                                }
                              
                               
                            }
                        </div>
                    </div>
                </section>
            </div>
        </div>
        <!-- Group Products End-->

    </main>
</body>
</html>


